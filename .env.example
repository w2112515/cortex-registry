# CortexRegistry Deployment Configuration
# Copy this file to .env and fill in the values

# ============ Deployment ============
# Cronos Testnet RPC (public endpoint)
RPC_URL=https://evm-t3.cronos.org

# Deployer wallet private key (with 0x prefix)
# ⚠️ NEVER commit this file with real keys!
DEPLOYER_PRIVATE_KEY=0x...

# Arbitrator address - authorized to resolve challenges
# This should be a multisig or trusted EOA
ARBITRATOR_ADDRESS=0x...

# Treasury address - receives protocol fees from slashing
TREASURY_ADDRESS=0x...

# Minimum stake in wei (default: 10 CRO for testnet)
# Production should be 100 CRO = 100000000000000000000
MIN_STAKE=10000000000000000000

# ============ Gateway ============
# After deployment, set this to the deployed contract address
REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000

# ============ Watchdog ============
# Watchdog bot wallet private key (separate from deployer)
WATCHDOG_PRIVATE_KEY=0x...

# Gateway URL for service discovery
GATEWAY_URL=http://localhost:3001

# Health check interval in ms (1 hour default)
CHECK_INTERVAL=3600000

# Failures before challenge
FAIL_THRESHOLD=3

# Enable dry-run mode (no actual transactions)
DRY_RUN=true

# ============ Redis ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============ RPC Endpoints ============
# Comma-separated list for failover
RPC_ENDPOINTS=https://evm-t3.cronos.org

# ============ DeepSeek API (Task-49) ============
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-xxxxxxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
# Model: deepseek-chat (default) or deepseek-coder
DEEPSEEK_MODEL=deepseek-chat

# ============ Agent Wallet (Task-49) ============
# Private key for Cortex Traveler agent (can reuse DEPLOYER_PRIVATE_KEY)
AGENT_PRIVATE_KEY=0x...
